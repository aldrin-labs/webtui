<div flex-="row gap:1 grow" class="dashboard-layout">
  <div flex-="col gap:1" id="sidebar" box-="square">
    <div flex-="row" space-="px:1">
      <button flex-="grow" size-="small">[D] Dashboard &#xf0e4;</button>
    </div>
    <div flex-="col" space-="px:1" is-="typography-block">
      <div>&#xf0e4; <code>&lt;C-d&gt;</code> Dashboard</div>
      <div>&#xf201; <code>&lt;C-s&gt;</code> Statistics</div>
      <div>&#xf080; <code>&lt;C-g&gt;</code> Graphs</div>
      <div>&#xf0ae; <code>&lt;C-t&gt;</code> Tasks</div>
      <hr />
      <div>&#xf013; <code>&lt;C-o&gt;</code> Settings</div>
      <div>&#xf0c0; <code>&lt;C-u&gt;</code> Users</div>
      <div>&#xf0f6; <code>&lt;C-r&gt;</code> Reports</div>
      <div>&#xf05a; <code>&lt;C-h&gt;</code> Help</div>
    </div>
  </div>

  <div flex-="col grow !basis" box-="square contain:!top" id="dashboard-container">
    <div flex-="row"><span is-="badge" variant-="background0">System Dashboard</span></div>

    <div flex-="col gap:2" space-="px:1" id="dashboard-content">
      <!-- Stats Overview Section -->
      <section>
        <h2>System Overview</h2>
        <div flex-="row gap:1 wrap">
          <div box-="square" space-="px:1" class="stat-card">
            <div flex-="row justify:between">
              <span>CPU Usage</span>
              <span is-="badge" variant-="background1">42%</span>
            </div>
            <div class="stat-bar">
              <div class="stat-fill" style="width: 42%"></div>
            </div>
            <div class="stat-trend">&#xf062; +5% from last hour</div>
          </div>

          <div box-="square" space-="px:1" class="stat-card">
            <div flex-="row justify:between">
              <span>Memory</span>
              <span is-="badge" variant-="background1">3.2/8 GB</span>
            </div>
            <div class="stat-bar">
              <div class="stat-fill" style="width: 40%"></div>
            </div>
            <div class="stat-trend">&#xf063; -2% from last hour</div>
          </div>

          <div box-="square" space-="px:1" class="stat-card">
            <div flex-="row justify:between">
              <span>Disk Space</span>
              <span is-="badge" variant-="background1">78%</span>
            </div>
            <div class="stat-bar">
              <div class="stat-fill" style="width: 78%"></div>
            </div>
            <div class="stat-trend">&#xf062; +1% from yesterday</div>
          </div>

          <div box-="square" space-="px:1" class="stat-card">
            <div flex-="row justify:between">
              <span>Network</span>
              <span is-="badge" variant-="background1">2.4 MB/s</span>
            </div>
            <div class="stat-bar">
              <div class="stat-fill" style="width: 30%"></div>
            </div>
            <div class="stat-trend">&#xf062; +15% from last hour</div>
          </div>
        </div>
      </section>

      <!-- ASCII Chart Section -->
      <section>
        <h2>System Load (24h)</h2>
        <div box-="square" space-="px:1" class="chart-container">
          <pre class="ascii-chart">
 100% ┤                                                  ╭╮          
      │                                                 ╭╯│          
  75% ┤                                        ╭╮      │ │   ╭╮     
      │                                       ╭╯╰╮    ╭╯ ╰╮ ╭╯╰╮    
  50% ┤                              ╭╮      │  │   ╭╯   ╰╮│  │    
      │                             ╭╯╰╮    ╭╯  ╰╮  │     ││  ╰╮   
  25% ┤                   ╭╮       │  │   ╭╯    │ ╭╯     ╰╯   │   
      │        ╭╮        │╰╮     ╭╯  ╰╮  │     ╰╮│            ╰╮  
