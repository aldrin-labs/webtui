<style>
  .calendar-layout {
    height: 100%;
    min-height: 80vh;
  }

  #sidebar {
    min-width: 24ch;
    height: 100%;
    --box-border-color: var(--background1);
  }

  #calendar-container {
    --box-border-color: var(--background1);
    display: flex;
    flex-direction: column;
    height: 100%;
    min-height: 80vh;
  }

  #event-panel {
    --box-border-color: var(--background1);
    height: 100%;
    min-height: 80vh;
  }

  .event-content {
    height: calc(100% - 2rem);
    overflow-y: auto;
  }

  #calendar-content {
    flex-grow: 1;
    overflow-y: auto;
  }

  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 2px;
    margin: 1lh 0;
  }

  .calendar-header {
    text-align: center;
    font-weight: bold;
    padding: 0.5lh 0;
    color: var(--foreground1);
  }

  .calendar-day {
    text-align: center;
    padding: 0.5lh 0;
    border: 1px solid var(--background1);
    cursor: pointer;
    position: relative;
  }

  .calendar-day:hover {
    background-color: var(--background1);
  }

  .calendar-day.selected {
    background-color: var(--background2);
    font-weight: bold;
  }

  .calendar-day.prev-month,
  .calendar-day.next-month {
    color: var(--foreground2);
  }

  .calendar-day.has-event::after {
    content: '';
    position: absolute;
    bottom: 3px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background-color: var(--foreground1);
  }

  .event-card {
    --box-border-color: var(--background2);
    margin-bottom: 0.5lh;
  }

  .upcoming-event {
    padding: 0.3lh 0;
    border-bottom: 1px solid var(--background1);
  }

  .upcoming-event:last-child {
    border-bottom: none;
  }

  @media (max-width: 768px) {
    .calendar-layout {
      flex-direction: column;
    }

    #sidebar, #event-panel {
      min-width: 100%;
      height: auto;
      min-height: auto;
    }

    #calendar-container {
      min-height: 60vh;
    }

    .calendar-grid {
      font-size: 0.9em;
    }
  }
</style>

<script client:load>
  // Select calendar day when clicking on it
  document.querySelectorAll('.calendar-day').forEach(day => {
    day.addEventListener('click', () => {
      document.querySelectorAll('.calendar-day').forEach(d => {
        d.classList.remove('selected');
      });
      day.classList.add('selected');
    });
  });
</script>
